<h1> <%= @job.title %>
 <%= link_to("发送简历", new_job_resume_path(@job), class: "btn btn-default pull-right")%>
</h1>
<p>
  <%= simple_format(@job.description)%>
</p>

<p>
  <%= @job.wage_lower_bound%>
</p>
<p>
<%= @job.wage_upper_bound%>
</p>
<p>
  <%= simple_format(@job.contact_email)%>
</p>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Download Link</th>
      
    </tr>
  </thead>
  <tbody>
    <% @resumes.each do |resume| %>
      <tr>
        <td><%= resume.name %></td>
        <td><%= link_to "Download Resume", resume.attachment_url %></td>

      </tr>
    <% end %>
  </tbody>
</table>
