<div class="dropdown clearfix pull-right">
  <button class="btn btn-danger dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    任务排序
    <span class="caret"></span>
  </button>
<ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
  <li>
    <%= link_to("按照佣金下限排序", jobs_path(:order => "by_lower_bound"), :class => "btn btn-xs btn-danger") %>
  </li>
  <li>
    <%= link_to("按照佣金上限排序", jobs_path(:order => "by_upper_bound"), :class => "btn btn-xs btn-danger") %>
  </li>
  <li>
    <%= link_to("按照发布时间排序", jobs_path, :class => "btn btn-xs btn-danger") %>
  </li>
</ul>
</div>
<table class="table table-boldered table-striped custab" >
  <thead>
    <tr>
      <td><i class="fa fa-bomb" aria-hidden="true"></i>任务名称</a></td>
      <td><span class="glyphicon glyphicon-arrow-down"></span> 佣金下限（两白银）</td>
      <td><span class="glyphicon glyphicon-arrow-up"></span> 佣金上限（两白银）</td>
      <td><i class="fa fa-star" aria-hidden="true"></i>任务等级</td>
      <td><span class="glyphicon glyphicon-time"></span> 发布时间</td>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job), :class => "btn btn-xs btn-danger") %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.wage_upper_bound%>
    </td>
    <td>
      <%= job.user_class %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
