<div class="pull-right">
  <%= link_to("发布任务", new_admin_job_path, :class => "btn btn-danger" ) %>
</div>

<table class="table table-boldered table-striped custab" >
  <thead>
    <tr>
      <td><i class="fa fa-bomb" aria-hidden="true"></i> 任务名称</a></td>
      <td><i class="fa fa-users" aria-hidden="true"></i>申请任务人数</td>
      <td><span class="glyphicon glyphicon-arrow-down"></span> 佣金下限（两白银）</td>
      <td><span class="glyphicon glyphicon-arrow-up"></span> 佣金上限（两白银）</td>
      <td><i class="fa fa-file-text" aria-hidden="true"></i>任务管理</td>
      <td><span class="glyphicon glyphicon-time"></span> 发布时间</td>
    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job) %>
      <%= link_to(job.title, admin_job_path(job)) %>
    </td>
    <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job))%></td>
    <td> <%= job.wage_lower_bound %></td>
    <td> <%= job.wage_upper_bound %></td>

    <td>
       <%= link_to edit_admin_job_path(job), class: "btn btn-xs btn-default" do %><i class="fa fa-pencil"></i><% end %>
  <%= link_to admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-default", :data => { :confirm => "Are you sure?" } do %><i class="fa fa-trash-o"></i><% end %>
      <% if job.is_hidden%>
      <%= link_to publish_admin_job_path(job) , :method => :post, :class => "btn btn-xs btn-default" do %><i class="fa fa-eye"></i><% end %>
      <% else %>
 <%= link_to hide_admin_job_path(job), :method => :post,  :class => "btn btn-xs btn-default" do %><i class="fa fa-eye-slash"></i><% end %>
      <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</tbody>
</table>
